<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container"
    android:background="@color/colorPrimaryDark"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/rv_icon"
            android:layout_width="23dp"
            android:layout_height="24dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/like_checked" />

        <ImageView
            android:id="@+id/imageSelfie"
            android:layout_width="102dp"
            android:layout_height="136dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/nutcracker" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="15dp"
            android:text="Nama Mahasiswa"
            android:textSize="10sp"
            android:fontFamily="@font/century_gothic"/>

        <TextView
            android:id="@+id/textNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="35dp"
            android:text="Fauzan Pramulia"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/century_gothic"/>

        <TextView
            android:id="@+id/textTanggal"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="80dp"
            android:text="12 Desember 2018"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:fontFamily="@font/century_gothic"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="60dp"
            android:text="Tanggal Check-In"
            android:textSize="10sp"
            android:fontFamily="@font/century_gothic"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="105dp"
            android:text="Matakuliah"
            android:textSize="10sp"
            android:fontFamily="@font/century_gothic"/>

        <TextView
            android:id="@+id/textMataKuliah"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="125dp"
            android:ellipsize="end"
            android:text="Pemrograman Mobile"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/century_gothic"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/century_gothic"
            android:text="Waktu Check-In"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textWaktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="80dp"
            android:text="10.00 WIB"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/century_gothic"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>